<div class="card" style="height: 300px;">
  <div class="row">
    <div class="col-3">
      <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 300 }) %>" alt="">
    </div>
    <div class="col-9">
      <h1 class="card-title" style="color: black; text-align: center;"><%= @user.name %></h1>
    </div>
  </div>
  <a href="<%= followings_user_path(@user) %>"> Followings  <span class="badge badge-secondary"><%= @count_followings %></span></a>
  <a href="<%= followers_user_path(@user) %>"> Followers  <span class="badge badge-secondary"><%= @count_followers %></span></a>
</div>
<%= render 'relationships/follow_button', user: @user %>
<div>
  <ul class="nav nav-tabs nav-justified">
    <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Tweets <span class="badge badge-secondary"><%= @count_tweets %></span></a></li>
    <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>">Likes  <span class="badge badge-secondary"><%= @count_favorites %></span></a></li>
  </ul>
  <%= render 'tweets/tweets', tweets: @likes %>
</div>